{
	"name": "@pm-ext/root",
	"private": true,
	"description": "Editor toolkit based on ProseMirror",
	"license": "MIT",
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev --parallel",
		"format:check": "turbo format:check",
		"format:fix": "turbo format:fix",
		"json:format:check": "node tools/json-format/bin.js package.json {packages,tools}/**/package.json --check",
		"json:format:fix": "node tools/json-format/bin.js package.json {packages,tools}/**/package.json",
		"test": "turbo test --concurrency 1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"turbo": "^2.5.6"
	},
	"packageManager": "pnpm@10.11.0",
	"engines": {
		"node": "24.8.0",
		"pnpm": "10.11.0"
	}
}
